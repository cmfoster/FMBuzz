<% @questions.sort!{|q1,q2| q2.likes.size<=>q1.likes.size}.each do |question|%>
  <p style="font-size:16px;"><%= link_to image_tag('upvote.png', :height => 20, :width => 35), show_vote_path(@show.id, :question => question.id, :vote => 'up'), :remote => true %><%= link_to image_tag('downvote.png', :height => 20, :width => 35), show_vote_path(@show.id, :question => question.id, :vote => 'down'), :remote => true %><%="#{question.likes.size}/#{question.dislikes.size} #{question.q.titleize}"%> </p>
<%end%>
