<!--Modal Window-->
<div class="modal-header">
  <a class="close" data-dismiss="modal">Ã—</a>
  <h3 style="text-align:center;"><%= "<font size='6' color='blue'>#{@playlist.name}</font> ".html_safe %> Playlist</h3>
</div>
<div class="modal-body">
  <div class="row" style="padding-left:40px;">
    <div class="span4" style="border:1px solid black">
      <ul class="unstyled">
	<% @playlist.songs.each do |song| %>
	  <li><%= link_to song.artist.name, show_songlist_path(:playlist_id => @playlist.id, :artist_id => song.artist.id), :remote => true %></li>
	<% end %>
      </ul>
    </div>
    <div class="span4" id="songlist" style="border:1px solid black">
    </div>
  </div>
</div>
<div class="modal-footer">
  <a href="#" class="btn btn-primary">Save changes</a>
  <a href="#" data-dismiss="modal" class="btn close">Close</a>
</div>

