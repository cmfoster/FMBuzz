  $(document).ready(function() {
    $('#new_subscriber').submit( function(){
      $('.signuploader').append($('.signupbar'));
      $('.signupbar').css({display:'block'});
	$.post('/subsdcribers',{email:$('#email').val(), signo:$('#signo').val()},

