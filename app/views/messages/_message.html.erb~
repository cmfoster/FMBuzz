 <div class="span11" id="messagelist" style="background-color: #f5f5f5;">
    <h2>Chat Stream <%= link_to current_user.name, '#', :class => 'pull-right', :style => 'font-size: 12px;'  if current_user %><%= link_to "Join the chat", '/auth/facebook', :class => 'pull-right', :style => 'font-size: 12px; text-decoration: underline;' unless current_user %></h2>
    <hr style="border: 1px solid black;margin-top: 0;">
    <% @messages.each do |message|%>
      <p style="font-size:14px;"><%= "<strong>#{message.author} </strong> #{message.msg}".html_safe%></p>
    <% end %>
    <% if current_user %>
      <%= form_for([@show, @message], :remote => true) do |f|%>
	<%= f.text_field :msg %>
	<%= f.hidden_field :author, :value => current_user.name %>
	<%= f.submit "send"%>
      <% end %>
    <% end %>
  </div>